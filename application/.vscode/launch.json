{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:55370",
            "webRoot": "${workspaceFolder}"
        },

        {
            "name": "Flutter Web (Port 55370)",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart",
            "args": [
                "--web-port",
                "55370"
            ]
        },
        {
            "name": "application",
            "cwd": "application",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "application (profile mode)",
            "cwd": "application",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "application (release mode)",
            "cwd": "application",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        }
    ]
}